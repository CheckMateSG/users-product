{
  "name": "functions",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "predeploy": "npm run build",
    "deploy:uat": "firebase deploy --only functions --project uat",
    "deploy:prod": "firebase deploy --only functions --project prod",
    "logs": "firebase functions:log",
    "test": "npx firebase emulators:exec --only firestore --project uat \"jest --detectOpenHandles\"",
    "test:watch": "npx firebase emulators:start --only firestore --project uat & jest --watch"
  },
  "engines": {
    "node": "22"
  },
  "main": "lib/index.js",
  "dependencies": {
    "firebase-admin": "^12.6.0",
    "firebase-functions": "^6.0.1",
    "pino": "^9.6.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "firebase-functions-test": "^3.1.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "typescript": "^4.9.0"
  },
  "private": true
}
